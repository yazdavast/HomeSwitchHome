<div class="container">
   <div class="row">
     <div class="col">
       <img src=<%=@residence.urlImag%> alt="propiedad" class="img-thumbnail">
     </div>
     <div class="col">
       <h2>Reservando <%=@residence.nombre%></h2> 
       <h3>Precio: <%=@residence.precio%>$</h2>
       <form action="/check">
         <input type="hidden" name="id" value=<%=@residence.id%> />
         <input type="hidden" name="precio" value=<%=@residence.precio%> />
        <label for="email"> Correo </label>
        <input type="email" id="email" name="email" placeholder="Ingrese un correo" required>
        <label> Fecha de ida </label>
      <input type="date" id="fechaInicio" name="fechaInicio" required>
      <input type="submit" value="Reservar" />
       </form>
     </div>
   </div>
 </div>