<h1>Residencia: <%=@residence.nombre%>  </h1>

<%= form_for @residence do |f| %>

<div class="form-group row">
    <%= f.label :nombre, 'Nombre', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, placeholder:'#{@residence.nombre}' , class: "form-control" , required: true %> 
    </div>
</div>

<div class="form-group row">
  	<%= f.label :urlImag,'URL', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :urlImag, required: true, placeholder: "#{@residence.urlImag}", class: "form-control" %> 
    </div>
  </div>



<div class="form-group row">
	<div class="col-sm-10">
		<%= f.label :descripcion %>
  				<%= f.text_area :descripcion, class: 'form-control', label: 'Descripción', placeholder: '#{@residence.descripcion}' %>
  			</div>
  		</div>

  <div class="form-group row">
  	<div class="col-sm-10">
  		<%= f.label :precio%>
  		<%= f.number_field :precio, required: true, label:'Precio $', placeholder:  "Ingrese el precio de la residencia",class: 'form-control'%>
  </div>
</div>

<div class="form-group row">
    <%= f.label :pais, 'Pais', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pais, placeholder: "Ingrese el pais al cual pertenece la residencia", class: "form-control" , required: true %> 
    </div>
     <%= f.label :provincia, 'Provincia', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :provincia, placeholder: "Ingrese una Provincia", class: "form-control" , required: true %> 
    </div>
     <%= f.label :localidad, 'Localidad', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :localidad, placeholder: "Ingrese la localidad", class: "form-control" , required: true %> 
    </div>
     <%= f.label :direccion, 'Dirección', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :direccion, placeholder: "Ingrese la dirección de la residencia", class: "form-control" , required: true %> 
    </div>


</div>




  <div class="form-group row">
    <div class="col-sm-10">
    	<%= f.submit 'Guardar', class: "btn btn-primary"  %>   
    	<a href="/residences" class="btn btn-outline-primary">Volver</a>

    </div>
  </div>

  </div>

  <div align="right">
  <a href="#" class="btn btn-primary">Modificar Calendario</a> </div>
 
 
 

<% end %>

